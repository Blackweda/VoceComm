<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.holdings.siloaman.talktoiea.ContactActivity">

    <TextView
        android:text="FIND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findTextView"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/findEditText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Contact:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findTextView"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/nameTextView" />

    <TextView
        android:text="NULL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="77dp"
        android:id="@+id/nameDisplayTextView"
        android:layout_alignBaseline="@+id/nameTextView"
        android:layout_alignBottom="@+id/nameTextView"
        android:layout_alignEnd="@+id/findEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/findEditText"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Phone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/phoneTextView" />

    <TextView
        android:text="NULL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/phoneTextView"
        android:layout_alignStart="@+id/nameDisplayTextView"
        android:id="@+id/phoneDisplayTextView" />

    <TextView
        android:text="Text Message:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneTextView"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/textMsgTextView" />

    <TextView
        android:text="Hey, I need help please! I am currently at this location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMsgTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textMessageDisplayTextView" />

    <TextView
        android:text="NULL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMessageDisplayTextView"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/locationDisplayTextView" />

    <Button
        android:text="HELP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/helpButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textMessageDisplayTextView" />

    <Button
        android:text="LOAD CONTACT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadDataButton"
        android:layout_alignBaseline="@+id/helpButton"
        android:layout_alignBottom="@+id/helpButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />


</RelativeLayout>
